# launch browser
super + b
	 firefox 

# launch private browser
super + shift + b
	firefox -private-window

# launch terminal 
super + Return
	ghostty

# launch rofi menu
super + space
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme ~/.config/bspwm/rofi/config.rasi

# launch floating terminal	
super + shift + Return
    tilix
	
# help with shortcuts
super + h
  ~/.config/bspwm/scripts/help
    
# application launchers

# launch thunar
super + f
	thunar

# launch geany
super + e
	geany

# launch gimp
super + g
	gimp

# launch pulsemixer
super + v
   tilix -e pulsemixer
	
# launch discord	
super + d
	Discord

# launch obs
super + o
	obs

# set window state
super + shift + {t,space,f}
	bspc node -t {tiled,floating,fullscreen}

# reload sxhkd
super + Escape
	pkill -USR1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'
	
# reload bspwm
super + shift + r
	bspc wm -r; notify-send 'bspwm' 'Restarted'

# close bspwm
super + shift + q
	bspc quit

# close window
super + q
	bspc node -c

super + i
    bspc node -R 90
super + shift + i
    bspc node -R -90

# change focus
super + { Left, Down, Up, Right}
	bspc node -f {west,south,north,east}

# switch focus
super + shift + { Left, Down, Up, Right}
	bspc node -s {west,south,north,east}

# switch workspace/move workspace
super + {_,shift + }{1-9,0,F1,F2}
	bspc {desktop --focus,node --to-desktop} 'focused:^{1-9,10,11,12}'

# resize window
super + ctrl + {Left,Down,Up,Right}
	{bspc node -z left -40 0; bspc node -z right -40 0, \
	bspc node -z bottom 0 40; bspc node -z top 0 40, \
	bspc node -z bottom 0 -40; bspc node -z top 0 -40, \ 
	bspc node -z left 40 0; bspc node -z right 40 0}
	
# volume up
super + Insert
    ~/scripts/changevolume up

# volume down   
super + Delete
	~/scripts/changevolume down

# volume mute	
super + m
	~/scripts/changevolume mute
	
# dedicated volume keys
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pamixer {-i,-d} 2

# dedicated backlight keys
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {+10,-10}

# select screenshot
super + @Print
	flameshot gui --path ~/Screenshots/

# full screenshot
@Print
	flameshot full --path ~/Screenshots/
	
# redshift on
super + alt + r
	~/scripts/redshift-on

# redshift off
super + alt + b
	~/scripts/redshift-off

# resize windows equal
super + @equal
	bspc query -N -d | xargs -I % bspc node % -B
